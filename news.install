post_install() {
    systemctl daemon-reexec
    systemctl daemon-reload
    systemctl enable bredos-news-update
    systemctl restart bredos-news-update
}

post_upgrade() {
    systemctl daemon-reexec
    systemctl daemon-reload
    systemctl enable bredos-news-update
    systemctl restart bredos-news-update
}

post_remove() {
    systemctl disable --now bredos-news-update
}

